/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "core-data": ["./projects/core-data/src/public-api.ts"],
      "persistence": ["./projects/persistence/src/public-api.ts"],
      "ui-components": ["./projects/ui-components/src/public-api.ts"],
      "feature-tasks": ["./projects/feature-tasks/src/public-api.ts"]
    },
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve"
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./projects/core-data/tsconfig.lib.json"
    },
    {
      "path": "./projects/core-data/tsconfig.spec.json"
    },
    {
      "path": "./projects/persistence/tsconfig.lib.json"
    },
    {
      "path": "./projects/persistence/tsconfig.spec.json"
    },
    {
      "path": "./projects/ui-components/tsconfig.lib.json"
    },
    {
      "path": "./projects/ui-components/tsconfig.spec.json"
    },
    {
      "path": "./projects/feature-tasks/tsconfig.lib.json"
    },
    {
      "path": "./projects/feature-tasks/tsconfig.spec.json"
    }
  ]
}
